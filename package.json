{
  "name": "vue-i18n-transform",
  "displayName": "vue-i18n-transform",
  "description": "",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": "https://github.com/zxpsuper/vue-i18n-transform/tree/vscode-plugin",
  "categories": [
    "Other"
  ],
  "publisher": "zxpsuper",
  "icon": "icon.png",
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vue-i18n-transform.transformFile",
        "title": "transformFile i18n"
      },
      {
        "command": "vue-i18n-transform.recoverFile",
        "title": "recoverFile i18n"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus && resourceLangId == vue",
          "command": "vue-i18n-transform.transformFile",
          "group": "vue-i18n-transform"
        },
        {
          "when": "editorFocus && resourceLangId == javascript",
          "command": "vue-i18n-transform.transformFile",
          "group": "vue-i18n-transform"
        },
        {
          "when": "editorFocus && resourceLangId == typescript",
          "command": "vue-i18n-transform.transformFile",
          "group": "vue-i18n-transform"
        },
        {
          "when": "editorFocus && resourceLangId == vue",
          "command": "vue-i18n-transform.recoverFile",
          "group": "vue-i18n-transform"
        },
        {
          "when": "editorFocus && resourceLangId == javascript",
          "command": "vue-i18n-transform.recoverFile",
          "group": "vue-i18n-transform"
        },
        {
          "when": "editorFocus && resourceLangId == typescript",
          "command": "vue-i18n-transform.recoverFile",
          "group": "vue-i18n-transform"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build": "vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "json-to-ast": "^2.1.0",
    "mocha": "^9.2.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "validator": "^13.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  }
}
